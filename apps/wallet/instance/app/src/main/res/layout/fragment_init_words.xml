    </androidx.core.widget.NestedScrollView>

    <uikit.widget.RowLayout
        android:id="@+id/suggestions"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

</FrameLayout>