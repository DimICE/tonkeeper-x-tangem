                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="@dimen/offsetMedium"
                android:title="@string/import_wallet_title"
                android:description="@string/import_wallet_description"/>

            <uikit.widget.RowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:background="@drawable/bg_content_20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/words_24"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:textAppearance="@style/TextAppearance.Label2"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/bg_content_tint_16"
                    android:gravity="center"
                    android:text="@string/words24"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/words_12"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="?attr/textPrimaryColor"
                    android:textAppearance="@style/TextAppearance.Label2"
                    android:paddingHorizontal="14dp"
                    android:gravity="center"
                    android:text="@string/words12"/>

            </uikit.widget.RowLayout>

            <uikit.widget.ColumnLayout
                android:id="@+id/inputs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/offsetLarge"
                android:layout_marginVertical="16dp">

                <com.tonapps.tonkeeper.ui.component.WordEditText
                    style="@style/Widget.App.WordEditText"
                    android:id="@+id/word_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/word_2"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:tag="1"/>

                <com.tonapps.tonkeeper.ui.component.WordEditText
                    style="@style/Widget.App.WordEditText"
                    android:id="@+id/word_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusUp="@+id/word_1"
                    android:nextFocusDown="@+id/word_3"
