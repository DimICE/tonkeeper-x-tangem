<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="@dimen/offsetMedium">

        <View
            android:id="@+id/shimmer_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_oval"
            android:backgroundTint="?attr/backgroundContentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_title"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_subtitle"
            android:layout_width="72dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_title" />

        <View
            android:id="@+id/shimmer_subtitle2"
            android:layout_width="142dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <uikit.widget.DividerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="@dimen/offsetMedium"
        android:orientation="horizontal">

        <uikit.widget.ButtonsLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <uikit.widget.shimmer.ShimmerIconButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <uikit.widget.shimmer.ShimmerIconButtonView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </uikit.widget.ButtonsLayout>

    </FrameLayout>

    <uikit.widget.DividerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="128dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="128dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:background="@drawable/bg_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>