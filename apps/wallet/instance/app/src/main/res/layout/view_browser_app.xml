<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.ColumnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <uikit.widget.FrescoView
        android:id="@+id/icon"
        android:layout_width="@dimen/barHeight"
        android:layout_height="@dimen/barHeight"
        android:layout_gravity="center_horizontal"
        app:placeholderImage="@drawable/bg_content_tint_16"
        app:roundedCornerRadius="@dimen/offsetMedium"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="2dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.Body3"
        android:textColor="?attr/textSecondaryColor"/>

</uikit.widget.ColumnLayout>